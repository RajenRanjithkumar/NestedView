<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">
    <RelativeLayout
        android:layout_width="260dp"
        android:layout_height="100dp"
        android:background="@drawable/roundcorner2"
        android:padding="20dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardimage_type2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_marginTop="10dp"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/image_type2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"/>

        </androidx.cardview.widget.CardView>


    <TextView
        android:layout_toRightOf="@+id/cardimage_type2"
        android:id="@+id/title2"
        android:layout_marginTop="7dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello world"
        android:textSize="17sp"
        android:textStyle="bold"
        android:paddingLeft="15dp"
        android:paddingBottom="2dp"
        android:layout_toEndOf="@+id/cardimage_type2" />

    <TextView
        android:layout_below="@+id/title2"
        android:id="@+id/subtitle"
        android:textColor="#476E55"
        android:paddingStart="14dp"
        android:layout_toRightOf="@+id/cardimage_type2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello "
        android:textSize="15sp"
        android:paddingLeft="10dp"
        android:layout_toEndOf="@+id/cardimage_type2" />

    </RelativeLayout>

</RelativeLayout>